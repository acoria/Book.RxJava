<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Example1_ObservableObserver">

    <Button
        android:id="@+id/rx_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxJava, do your magic!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/new_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger another event"
        app:layout_constraintStart_toStartOf="@id/rx_button"
        app:layout_constraintTop_toBottomOf="@id/rx_button"/>

</android.support.constraint.ConstraintLayout>